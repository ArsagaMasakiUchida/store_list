<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <RadioGroup
            android:layout_width="287dp"
            android:layout_height="237dp" app:layout_constraintBottom_toTopOf="@+id/editText5"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.381"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp">
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioButton5" android:layout_weight="1"
                android:text="@string/radio_button_store_name"/>
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="44dp" android:id="@+id/radioButton4" android:layout_weight="1"
                android:text="@string/radio_button_station_name"/>
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioButton6" android:layout_weight="1"
                android:text="@string/radio_button_distance"/>
    </RadioGroup>
    <Button
            android:layout_width="214dp"
            android:layout_height="65dp"
            android:id="@+id/searchButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="97dp"
            android:layout_marginRight="97dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="97dp" android:layout_marginStart="97dp"
            android:background="@color/colorPrimary" android:textSize="36sp" android:lineSpacingExtra="30sp"
            android:textColor="@android:color/background_light" android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintTop_toBottomOf="@+id/editText5"
            app:layout_constraintVertical_bias="1.0" android:layout_marginBottom="150dp"
            android:layout_marginTop="50dp" android:text="@string/search_button" tools:text="@string/search_button"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:ems="10"
            android:id="@+id/searchText" android:layout_marginTop="324dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="97dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="97dp"
            android:layout_marginStart="97dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="97dp"
            android:hint="@string/hint_text_search"/>
</android.support.constraint.ConstraintLayout>